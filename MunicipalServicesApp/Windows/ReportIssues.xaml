<Window x:Class="MunicipalServicesApp.Windows.ReportIssues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalServicesApp.Windows"
        mc:Ignorable="d"
        Title="Report Issues"
        Height="540"
        Width="960"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="Window_Closing"
        >

    <Grid x:Name="grdBackGround"
          Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="btnBack"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Content="🔙"
               FontFamily="Consolas"
               FontSize="36"
               MouseEnter="btnBack_MouseEnter"
               MouseLeave="btnBack_MouseLeave"
               MouseLeftButtonUp="btnBack_MouseLeftButtonUp" />

        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
